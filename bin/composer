#!/bin/bash

DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
. "$DIR/utilities/helpers.sh"
. "$DIR/phpversion.sh"

composerVersions=($(_split_string "$(which -a composer | tr '\n' ' ')" " "))

if [ ${#composerVersions[@]} -lt 2 ]; then
    echo "No Composer not found on your system"
    exit 1
fi

$php "${composerVersions[1]}" "$@"
